# Environment Variables
# Copy this file to .env.local and update the values

# Backend API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_API_KEY=your-api-key-here

# Enable/Disable Mock Data (set to false when backend is ready)
NEXT_PUBLIC_USE_MOCK_DATA=true

# Environment
NODE_ENV=development

# External API Keys (for production backend)
TBO_API_KEY=your-tbo-api-key
TBO_API_URL=https://api.tbotechnology.in
TBO_USERNAME=your-tbo-username
TBO_PASSWORD=your-tbo-password

# Database (for backend)
DATABASE_URL=sqlite:///database/database.sqlite

# JWT Secret (for authentication)
JWT_SECRET=your-jwt-secret-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Payment Gateway (for booking payments)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-secret

# File Storage
STORAGE_DRIVER=local
AWS_S3_BUCKET=your-s3-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_region=us-east-1

# Cache Configuration
REDIS_URL=redis://localhost:6379

# Analytics & Social Media
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
FACEBOOK_PIXEL_ID=your-pixel-id
FACEBOOK_APP_ID=your-facebook-app-id
GOOGLE_CLIENT_ID=your-google-client-id

# Maps & Additional APIs
NEXT_PUBLIC_MAPS_API_KEY=your_maps_api_key_here
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id_here

# Proxy Configuration (for development)
PROXY_URL=http://your-proxy-server:port